@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Library Management System</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <header>
	    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
		    <div class="container" style="margin-bottom: 0 !important;">
			    <a style="color:darkgray;" class="navbar-brand" href="/">Library Management</a>
			    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
			            aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
				    <span class="navbar-toggler-icon"></span>
			    </button>
			    <div class="collapse navbar-collapse" id="navbarNav">
				    <ul class="navbar-nav ms-auto">
					    <li class="nav-item">
						    <a class="nav-link" href="@Url.Action("Index", "Home")">
							    <i class="fas fa-home"></i> Home
						    </a>
					    </li>
					    <li class="nav-item">
						    <a class="nav-link" href="@Url.Action("List", "Book")">
							    <i class="fas fa-book"></i> Books
						    </a>
					    </li>
					    <li class="nav-item">
						    <a class="nav-link" href="@Url.Action("Create", "Book")">
							    <i class="fas fa-plus"></i> Add Book
						    </a>
					    </li>
					    <li class="nav-item">
						    <a class="nav-link" href="@Url.Action("List", "Author")">
							    <i class="fas fa-user"></i> Authors
						    </a>
					    </li>
					    <li class="nav-item">
						    <a class="nav-link" href="@Url.Action("Create", "Author")">
							    <i class="fas fa-plus"></i> Add Author
						    </a>
					    </li>
				    </ul>
			    </div>
		    </div>
	    </nav>

    </header>

    <main>
        @RenderBody()
    </main>

    <footer class="mt-4 footer text-center py-2">
        <small>&copy; 2025 All Rights Reserved | Designed by Tuana Erol</small>
    </footer>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/js/all.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</body>
</html>
