@model LibraryManagementSystem.Models.Book

@{
	ViewData["Title"] = "Delete Book";
	Layout = "_Layout";
}

<h1>Are you sure you want to delete this book?</h1>

<div>
	<h3>@Model.Title</h3>
	<p><strong>Genre:</strong> @Model.Genre</p>
	<p><strong>Publish Date:</strong> @Model.PublishDate.ToString("MMMM dd, yyyy")</p>
	<p><strong>ISBN:</strong> @Model.ISBN</p>
	<p><strong>Copies Available:</strong> @Model.CopiesAvailable</p>
</div>

<form method="post" asp-action="DeleteConfirmed" asp-route-id="@Model.Id">
	@Html.AntiForgeryToken()
	<button type="submit" class="btn btn-danger">Delete</button>
	<a href="@Url.Action("List", "Book")" class="btn btn-secondary">Cancel</a>
</form>