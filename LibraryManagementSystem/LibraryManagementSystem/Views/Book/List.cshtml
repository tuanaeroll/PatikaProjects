@model IEnumerable<LibraryManagementSystem.Models.Book>

@{
    ViewData["Title"] = "Book List";
}

<div class="container mt-4">
    <h2>Book List</h2>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>Title</th>
                <th>Genre</th>
                <th>Publish Date</th>
                <th>ISBN</th>
                <th>Copies Available</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var book in Model)
            {
                <tr>
                    <td>@book.Title</td>
                    <td>@book.Genre</td>
                    <td>@book.PublishDate.ToShortDateString()</td>
                    <td>@book.ISBN</td>
                    <td>@book.CopiesAvailable</td>
                    <td>
                        <a href="@Url.Action("Details", "Book", new { id = book.Id })" class="btn btn-primary btn-sm">Details</a>
                        <a href="@Url.Action("Edit", "Book", new { id = book.Id })" class="btn btn-info btn-sm">Edit</a>
                        <a href="@Url.Action("Delete", "Book", new { id = book.Id })" class="btn btn-secondary btn-sm">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
