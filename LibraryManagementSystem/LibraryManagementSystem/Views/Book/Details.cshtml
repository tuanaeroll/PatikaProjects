@model LibraryManagementSystem.Models.Book

@{
    ViewData["Title"] = "Book Details";
}

<div class="container mt-4">
    <h2>Book Details</h2>

    <div class="card">
        <div class="card-header">
            <h4>@Model.Title</h4>
        </div>
        <div class="card-body">
            <p><strong>Genre:</strong> @Model.Genre</p>
            <p><strong>Publish Date:</strong> @Model.PublishDate.ToShortDateString()</p>
            <p><strong>ISBN:</strong> @Model.ISBN</p>
            <p><strong>Copies Available:</strong> @Model.CopiesAvailable</p>
        </div>
        <div class="card-footer">
            <a href="@Url.Action("List", "Book")" class="btn btn-secondary">Back</a>
        </div>
    </div>
</div>
