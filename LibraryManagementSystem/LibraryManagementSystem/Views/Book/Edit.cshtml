@model LibraryManagementSystem.Models.Book

@{
    ViewData["Title"] = "Edit Book";
    Layout = "_Layout";
}

<div class="container mt-4">
    <h2 class="text-center text-warning">Edit Book</h2>

    <form asp-action="Edit" method="post">
        @Html.AntiForgeryToken()
        <div class="row mb-3">
            <label for="Title" class="col-sm-2 col-form-label">Title</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="Title" name="Title" value="@Model.Title" required placeholder="Enter book title" />
            </div>
        </div>

        <div class="row mb-3">
            <label for="Genre" class="col-sm-2 col-form-label">Genre</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="Genre" name="Genre" value="@Model.Genre" required placeholder="Enter genre" />
            </div>
        </div>

        <div class="row mb-3">
            <label for="PublishDate" class="col-sm-2 col-form-label">Publish Date</label>
            <div class="col-sm-10">
                <input type="date" class="form-control" id="PublishDate" name="PublishDate" value="@Model.PublishDate.ToString("yyyy-MM-dd")" required />
            </div>
        </div>

        <div class="row mb-3">
            <label for="ISBN" class="col-sm-2 col-form-label">ISBN</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="ISBN" name="ISBN" value="@Model.ISBN" required placeholder="Enter ISBN" />
            </div>
        </div>

        <div class="row mb-3">
            <label for="CopiesAvailable" class="col-sm-2 col-form-label">Copies Available</label>
            <div class="col-sm-10">
                <input type="number" class="form-control" id="CopiesAvailable" name="CopiesAvailable" value="@Model.CopiesAvailable" required placeholder="Enter number of copies" />
            </div>
        </div>

        <div class="row mb-3">
            <div class="col-sm-10 offset-sm-2">
                <button type="submit" class="btn btn-warning">Update Book</button>
            </div>
        </div>
    </form>
</div>
