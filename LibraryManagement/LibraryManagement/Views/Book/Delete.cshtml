@{
	Layout = "_Layout";
}

<h1>Kitap Silme</h1>

<p>Bu kitabı silmek istediğinizden emin misiniz?</p>

<div>
	<strong>Başlık:</strong> @Model.Title
</div>
<div>
	<strong>Yazar:</strong> @Model.AuthorFullName
</div>
<div>
	<strong>Tür:</strong> @Model.Genre
</div>
<div>
	<strong>Yayın Tarihi:</strong> @Model.PublishDate.ToString("dd/MM/yyyy")
</div>

<form method="post">
	<input type="hidden" name="Id" value="@Model.Id" />
	<button type="submit">Evet, Sil</button>
</form>

<a href="@Url.Action("List", "Book")">Hayır, Geri</a>