@{
	Layout = "_Layout";
}

<h1>Yeni Kitap Ekle</h1>

<form method="post">
	<div>
		<label for="Title">Başlık:</label>
		<input type="text" id="Title" name="Title" value="@Model.Title" required />
	</div>
	<div>
		<label for="AuthorId">Yazar:</label>
		<select id="AuthorId" name="AuthorId" required>
			@foreach (var author in Model.Authors)
			{
				<option value="@author.Id">@author.FirstName @author.LastName</option>
			}
		</select>
	</div>
	<div>
		<label for="Genre">Tür:</label>
		<input type="text" id="Genre" name="Genre" value="@Model.Genre" required />
	</div>
	<div>
		<label for="PublishDate">Yayın Tarihi:</label>
		<input type="date" id="PublishDate" name="PublishDate" value="@Model.PublishDate.ToString("yyyy-MM-dd")" required />
	</div>
	<div>
		<label for="ISBN">ISBN:</label>
		<input type="text" id="ISBN" name="ISBN" value="@Model.ISBN" required />
	</div>
	<div>
		<label for="CopiesAvailable">Mevcut Kopyalar:</label>
		<input type="number" id="CopiesAvailable" name="CopiesAvailable" value="@Model.CopiesAvailable" required />
	</div>

	<button type="submit">Ekle</button>
</form>

<a href="@Url.Action("List", "Book")">Geri</a>